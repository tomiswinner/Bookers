<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book.id) %></td>
        <td><%= link_to "edit",edit_path(book.id) %></td>
        <td><%= link_to "destroy",destroy_path(book.id), method: :delete,data: {confirm:"Are you sure?"} %></td>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this book from being saved.</h3>
  <p>
    <%= @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </p>
<% end %>

<div>
<%= form_with model:@book,local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>
</div>