<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show",show_path(book.id) %></td>
        <td><%= link_to "edit",edit_path(book.id) %></td>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>