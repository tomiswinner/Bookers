<header>
  <h1 class="title">Editing Book</h1>
</header>
<main>
  <% if @book.errors.any? %>
      <div class="error_message">
        <h3 class="error_message_title"><%= @book.errors.count %> errors prohibited this book from being saved.</h3>
        <ul class="error_message_content">
          <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div>
    <%= form_with model:@book,local:true do |f| %>
      <%= f.label :title,class:"form_label" %>
      <%= f.text_field :title,class:"form_field"%>
      <%= f.label :body,class:"form_label" %>
      <%= f.text_area :body,class:"form_field"%>
      <%= f.submit "Update Book",class:"form_label" %>
    <% end %>
    <div class="link_btn">
      <span><%= link_to "Show",book_path(@book.id) %></span>
      |
      <span><%=link_to "Back",books_path %></span>
    </div>
  </div>
</main>