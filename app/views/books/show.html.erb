<header>
  <% if flash[:notice] %>
    <p class="flash"><%= flash[:notice] %></p>
  <% end %>
</header>

<main>
  <p class="book_content"><span class="bold">Title:</span> <%= @book.title %></p>
  <p class="book_content"><span class="bold">Body:</span> <%= @book.body %></p>

  <div class="link_btn">
    <span><%= link_to "Edit",edit_path(@book.id) %></span>
    |
    <span><%= link_to "Back",books_path %></span>
  </div>
</main>